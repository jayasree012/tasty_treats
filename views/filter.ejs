<!-- BODY SECTION -->
<body>
  <h1>
    <center>
    </center>
  </h1>
  <br />
  <br />
  <form class="" action="/" method="post">
    <div class="row" style="display:flex; flex-wrap: wrap;">
      <% products.forEach(function(items) { %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <div class="caption" style="text-align: center">
            <h3><%= items.desc %></h3>
          </div>
          <div class=imagecon>
            <img src="data:items/<%=items.img.contentType%>;base64,
             <%=items.img.data.toString('base64')%>">
          </div>
          <div class="caption" style="text-align: center">
            <h3 class="price-tag">Rs. <%= items.price %> /-</h3>
          </div>
          <center>
            <a href="/add/<%= items.desc%>" class="btn">Add to cart</a>
          </center>
        </div>
      </div>
      <% }); %>
    </div>
  </form>

</body>

</html>
