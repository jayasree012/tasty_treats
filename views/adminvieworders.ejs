<!-- BODY SECTION -->

<body>
  <h1>
    <center>

    </center>
  </h1>
  <br />
  <br />
  <%Detail.forEach(function(detail){%>
  <div class="customize">
    <center>
      <h4>Order ID : <%=detail._id%></h4>
      <h4>UserID : <%=detail.userID%></h4>
      <h5>Date : <%=detail.time%></h5>
    </center>
    <table class="table table-striped alignmiddle">
      <tr>
        <th>Item Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Amount</th>
      </tr>
      <%var total=0%>
      <%detail.cart.forEach(function(product){ %>
      <%var sub=parseFloat(product.quantity * product.price).toFixed(2)%>
      <%total+= +sub%>
      <tr>
        <td><%=product.name%></td>
        <td><%=product.category%></td>
        <td><%=product.price%></td>
        <td><%=product.quantity%></td>
        <td>
          Rs <%=sub%>
        </td>
      </tr>
      <%});%>
    </table>
    <center>
      <b>Total Amount : </b> Rs <%=total%>
      <h4>Address : <%=detail.address%></h4>
      <h4>Mobile No. : <%=detail.phone%></h4>
      <br />
      <br />
    </center>
  </div>
  <br />

  <%});%>



</body>


