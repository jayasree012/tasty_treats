<!-- BODY SECTION -->

<body>
  <h1>
    <center>
    </center>
  </h1>
  <br />
  <br />
  <div class="row" style="display:flex; flex-wrap: wrap;">
    <% products.forEach(function(items) { %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <div class="caption" style="text-align: center">
          <h3><%= items.desc %></h3>
        </div>
        <div class=imagecon>
          <img src="data:items/<%=items.img.contentType%>;base64,
             <%=items.img.data.toString('base64')%>">
        </div>
        <div class="caption" style="text-align: center">
          <h3 class="price-tag">Rs. <%= items.price %> /-</h3>
        </div>
        <center>
          <a href="/admin_allproducts/delete/<%= items._id %>" class="deleteproduct btn">Delete</a>
        </center>
      </div>
    </div>
    <% }); %>
  </div>

<!-- delete product -->
  <script>
    $(function() {
      $('a.deleteproduct').on('click', function() {
        if (!confirm('Confirm Delete'))
          return false;
      });
    });
  </script>

</body>

</html>
